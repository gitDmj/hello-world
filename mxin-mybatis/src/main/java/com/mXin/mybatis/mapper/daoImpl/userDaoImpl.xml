<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mXin.mybatis.mapper.dao.UserMapper">

  <select id="selectByUserId" resultType="com.mXin.mybatis.pojo.User">
    select * from user where id = #{id}
  </select>
  
  <insert id="insertUser" >
  	insert into user (id,username,`password`,email,phone)
  				values (#{id},#{username},#{password},#{email},#{phone})
  </insert>
  
</mapper>